{{ define "addThread/thread.tmpl" }}
    <html lang="en">
    <div class="container">
        <form method="post">
            <label>Title:</label>
            <input type="text" name="title" placeholder="title">
            <br><br>
            <label>Message:</label>
            <input type="text" name="message" placeholder="message">
            <br><br>

            <button type="submit">Save</button>
            <button href="/threads">Cancel</button>
        </form>
    </div>

    <br>
    <style>
        .container {
            margin-top: 15%;
            margin-left: 15%;
            margin-right: 15%;
            background-color: white;
            border-radius: 25px;
            width: auto;
            padding: 20px;

        }

        body {
            background: #c31432; /* fallback for old browsers */
            background: -webkit-linear-gradient(to right, #c31432, #240b36); /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to right, #c31432, #240b36); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        }

        h3 {
            font-family: "Inter Semi Bold";
            font-size: 11px;
            line-height: 14px;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-weight: bold;
            color: white;

        }

        a {
            text-decoration: none;
            color: burlywood;
        }

        .message {
            margin-left: 15px;
            display: flex;
            margin-top: 10px;
            color: white;
        }
    </style>
    </html>
{{ end }}


